<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.diceout.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/rollResult"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="30dp"
        android:text="Let's Play!!"
        android:textColor="@android:color/white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@+id/dielImage"
        app:layout_constraintRight_toLeftOf="@+id/dei2Image"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/dielImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="14dp"

        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/die_1"
        app:layout_constraintBottom_toBottomOf="@+id/dei2Image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/dei2Image"
        app:layout_constraintTop_toTopOf="@+id/dei2Image"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/dei2Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="130dp"

        android:layout_marginStart="130dp"
        android:layout_marginTop="77dp"
        android:src="@drawable/die_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rollResult"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/dei3Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="29dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="29dp"
        android:layout_marginStart="25dp"
        android:src="@drawable/die_1"
        app:layout_constraintBottom_toBottomOf="@+id/dei2Image"
        app:layout_constraintLeft_toRightOf="@+id/dei2Image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dei2Image"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="178dp"
        android:layout_height="51dp"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:text="Score: 0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
